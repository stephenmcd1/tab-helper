{
    "name": "Tab Controller",
    "version": "1.4.0",
    "manifest_version": 3,
    "description": "Adds the ability to control tabs from external applications",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "128": "browsers-128.png"
        },
        "default_title": "Tab Controller"
    },
    "icons": {
        "128": "browsers-128.png"
    },
    "permissions": [
        "nativeMessaging",
        "tabs",
        "storage"
    ],
    "optional_host_permissions": ["file:///*"]
}